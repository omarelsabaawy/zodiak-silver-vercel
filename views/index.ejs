<%- include('includes/head.ejs') %>

    <body>
        <!--::header part start::-->
        <%- include('includes/navigation.ejs') %>
            <!-- Header part end-->

            <!-- banner part start-->
            <section class="banner_part">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="banner_text">
                                <div class="banner_text_iner">
                                    <h1 style="color: rgba(14, 12, 12, 0.8);">Best quality necklace
                                    </h1>
                                    <p>Jewelry is a very personal thing... it should tell a story about the person who's wearing it.</p>
                                    <a href="/shop" class="btn_1">shop now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="banner_img">
                    <img style="width: 500px; margin-bottom: 100px;" src="/img/zsfp.png" alt="" class="img-fluid">
                </div>
            </section>
            <!-- banner part start-->

            <!-- trending item start-->
            <section class="trending_items">
                <div class="container">
                    <%if(products.length >= 3){%>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section_tittle text-center">
                                    <h2>Trending Items</h2>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <%for(let i = 0 ; i < 3 ; i++){%>
                                <div class="col-lg-4 col-sm-6">
                                    <div class="single_product_item">
                                        <a href="/products/<%= products[i]._id %>"> <img style="height: 400px;" src="/<%= products[i].imageUrl %>" alt="#" class="img-fluid">
                                            <h3> <a href="/products/<%= products[i]._id %>">
                                                <%= products[i].title %></a> </h3>
                                        </a>
                                    </div>
                                </div>
                                <%}%>
                        </div>
                        <%}%>
                </div>
            </section>
            <!-- trending item end-->

            <%- include('includes/feature-sub.ejs') %>

                <!--::footer_part start::-->
                <%- include('includes/end.ejs') %>
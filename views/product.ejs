<%- include('includes/head.ejs') %>

    <body>

        <%- include('includes/navigation.ejs') %>
            <!-- breadcrumb part start-->
            <section class="breadcrumb_part single_product_breadcrumb">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="breadcrumb_iner">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- breadcrumb part end-->

            <!--================Single Product Area =================-->
            <div class="product_image_area">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="product_img_slide owl-carousel">
                                <div class="single_product_img">
                                    <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="single_product_text text-center">
                                <h3 style="color: rgba(14, 12, 12, 0.8);">
                                    <%= product.title %>
                                </h3>
                                <p style="color: rgba(14, 12, 12, 0.8);">
                                    <%= product.description %>
                                </p>
                                <div class="card_area">
                                    <div class="product_count_area">
                                        <form action="/cart" method="post">
                                            <p style="color: rgba(14, 12, 12, 0.8);">Quantity</p>
                                            <div style="border-color: #fdb957;" class="product_count d-inline-block">
                                                <span style="color: #fdb957;" class="product_count_item inumber-decrement"> <i class="ti-minus"></i></span>
                                                <input style="background-color: #fdb957; border-color: #fdb957;" class="product_count_item input-number" name="quantity" type="text" value="1" min="0" max="10">
                                                <span style="color: #fdb957;" class="product_count_item number-increment"> <i class="ti-plus"></i></span>
                                            </div>
                                            <p style="color: rgba(14, 12, 12, 0.8);">LE.
                                                <%= product.price%>
                                            </p>
                                    </div>

                                    <script>
                                        var quantity = document.getElementById('d').value;
                                        var price = document.getElementById('price');
                                        console.log(price);
                                        return document.getElementById('price').write = quantity * product.price;
                                    </script>
                                    <div style="margin-left: 10px;" class="add_to_cart">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn_3" type="submit">Add to Cart</button>
                                        <input type="hidden" name="productId" value="<%= product._id %>">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--================End Single Product Area =================-->
            <%- include('includes/end.ejs') %>